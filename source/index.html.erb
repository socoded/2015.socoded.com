<script>
  (function() {
    setTimeout(function() { document.getElementById("video").play(); }, 500);

    function getBody() {
      return document.getElementsByTagName('body')[0];
    }

    function getVideo1() {
      return document.getElementById('video');
    }

    function getVideo2() {
      return document.getElementById('video2');
    }

    function getVideo3() {
      return document.getElementById('video3');
    }

    function getButton() {
      return document.getElementById('join-the-gathering')
    }

    function addBodyClass(className) {
      var body = getBody();
      body.className = body.className + ' ' + className;
    }

    window.joinTheGathering = function() {
      addBodyClass('video2');
      var video2 = getVideo2();

      var button = getButton();
      button.setAttribute("deactivated","deactivated");

      var nearlyEndedCheck = function() {
        if (video2.currentTime > 3.45) {
          addBodyClass('nearly-ended');
        } else {
          setTimeout(nearlyEndedCheck, 50);
        }
      }

      if (window.socodedOnMobile) {
        setTimeout(function() {
          addBodyClass('video2-ended');
          addBodyClass('nearly-ended');
        }, 3200);
      } else {
        video2.play();
        nearlyEndedCheck();
      }
    }

    function attachEndHandlerToVideos() {
      var video1 = getVideo1();
      var video2 = getVideo2();
      var video3 = getVideo3();

      if (video1 && video2) {
        video1.addEventListener('ended', function() { getButton().removeAttribute('deactivated'); addBodyClass('video1-ended'); }, false);
        video2.addEventListener('ended', function() { addBodyClass('video2-ended'); }, false);
      } else {
        setTimeout(attachEndHandlerToVideos, 50);
      }
    }
    attachEndHandlerToVideos();

    var setTitoHandler = function() {
      if ((typeof Tito) != 'undefined' && (typeof Tito.on) != 'undefined') {
        var hashArguments = window.location.hash.split('=');
        if (hashArguments && hashArguments.length == 2 && hashArguments[0] == '#ticket' && hashArguments[1] && hashArguments[1].match && hashArguments[1].match(/^[a-z0-9]+$/)) {
          document.getElementById('tito-widget').setAttribute("releases", "" + hashArguments[1]);
        }

        Tito.on('registration:complete', function(data) {
          addBodyClass('video3');
          video3.play();
        });
      } else {
        setTimeout(setTitoHandler, 1000);
      }
    };
    setTitoHandler();

    if (UA.isMobile()) {
      addBodyClass('mobile');
      addBodyClass('video1-ended');
      window.socodedOnMobile = true;
    }
  })();
</script>
