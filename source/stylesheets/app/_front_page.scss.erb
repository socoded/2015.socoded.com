body.front-page {
  $videoWidth: 854px;
  $videoHeight: 480px;

  $videoWidthMedium: $videoWidth / 2;
  $videoHeightMedium: $videoHeight / 2;

  $videoWidthMini: $videoWidthMedium / 2;
  $videoHeightMini: $videoHeightMedium / 2;

  @mixin video {
    position: fixed; left: 0; top: 0;
    width: 100%; height: 100%; z-index: -100;
  }

  @mixin hide-video {
    position: absolute;
    top: -9999px;
    left: -9999px;
  }

  &, & video {
    @include vendor-prefix(transition, "background-color 0.5s linear");
  }

  #video {
    @include video;
  }

  #video2, #video3 {
    @include hide-video;
  }

  &.video2 {
    #video {
      @include hide-video;
    }

    #video2 {
      @include video;
    }

  }

  &.video3 {
    #video, #video2 {
      @include hide-video;
    }

    #video3 {
      @include video;
    }
  }

  &.mobile {
    video {
      display: none;
    }

    body:after{
      display:none;
      content: url(<%= image_path('part_2.gif') %>);
    }
  }

  .instead-of-video1 {
    background: url(<%= image_path 'so_coded_000745.jpg' %>) no-repeat center center fixed;
    background-size: cover;
  }

  .instead-of-video2 {
    background: url(<%= image_path 'part_2.gif'%>)  no-repeat center center fixed;
    background-size: cover;
  }

  .instead-of-video1, .instead-of-video2 {
    @include hide-video;
  }

  &.mobile {
    .instead-of-video1 {
      @include video;
    }

    &.video2 {
      .instead-of-video1 {
        @include hide-video;
      }
      .instead-of-video2 {
        @include video;
      }
    }
  }

  #buy-ticket {
    position: absolute;
    left: 0;

    @media (min-width: 1025px) {
      bottom: 50px;
    }

    @media (min-width: 1024px) {
      bottom: 100px;
    }

    @media (min-width: 768px) {
      bottom: 150px;
    }

    @media (max-width: 767px ) {
      top: 0px;
    }

    #button {
      @include vendor-prefix(transition, "opacity 2s ease-in-out");

      @media (min-width: $videoWidth + 50px) {
        opacity: 0.0;
      }
    }
  }

  &.video1-ended #buy-ticket #button {
    @media (min-width: $videoWidth + 50px) {
      opacity: 1.0;
    }
  }

  &.video2 #buy-ticket #button {
    opacity: 0.0;
  }

  #ticket-form, #thank-you {
    display: none;
    margin: 0 auto;

    h1 {
      color: $signaturePink;
      font-family: 'amperzand';
      font-weight: normal;
      font-size: 36px;
    }

    .content {
      max-width: 600px;
      margin: 0 auto;
      text-align: center;
      font-size: 20px;
      font-family: sans-serif;
    }

    margin-top: 200px;

    @media (max-width: $videoWidth + 50px) {
      margin-top: 50px;
    }
  }

  #ticket-form {
    @include vendor-prefix(transition, "opacity 2s ease-in-out");
    opacity: 0.0;

    .tito-wrapper {
      max-width: 480px;
      background-color: #fff;
      border: none;

      .tito-badge-link a {
        color: $thePink;
      }

    }
  }

  #thank-you {
    h1 {
      font-size: 96px;
    }

    ul {
      list-style: none;
      margin: 0;
      padding: 0;
    }

    li{
      display:inline;
    }

    .fb-share-button{
      position:relative;
      top:-5px;
      left: 20px;
    }
  }

  &.video2-ended {
    background: #fff;

    #video1, #video2, #buy-ticket {
      display: none !important;
    }

    #ticket-form {
      display: block;
      opacity: 1.0;
    }
  }

  &.video3 {
    #ticket-form {
      display: none;
    }

    #thank-you {
      display: block;
    }
  }

  &.video2.nearly-ended, &.video2.nearly-ended video {
    background-color: #fff;
  }

  footer {
    div.outer div.inner {
      top: 200px;
    }
  }

  &.video2-ended footer {
    div.outer div.inner {
      top: 0px;
      opacity: 1;
    }
  }
}
